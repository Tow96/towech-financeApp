{
  "extends": [
    "next/core-web-vitals",
    "plugin:testing-library/react",
    "plugin:jest-dom/recommended"
  ],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "max-depth": [
          "error",
          {
            "max": 2
          }
        ],
        "max-nested-callbacks": [
          "error",
          {
            "max": 1
          }
        ]
      }
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.mock.ts", "*.mock.tsx"],
      "rules": {
        "max-nested-callbacks": "off"
      }
    }
  ]
}
