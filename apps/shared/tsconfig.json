{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "ES2023",
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "dist"
  ]
}