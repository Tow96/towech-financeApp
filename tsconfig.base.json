{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@towech-finance/authentication/dto": ["libs/authentication/dto/src"],
      "@towech-finance/authentication/http/signage": ["libs/authentication/http/signage/src"],
      "@towech-finance/authentication/mocks": ["libs/authentication/mocks/src"],
      "@towech-finance/authentication/passport": ["libs/authentication/passport/src"],
      "@towech-finance/authentication/repos/user": ["libs/authentication/repos/user/src"],
      "@towech-finance/authentication/shell/feature": ["libs/authentication/shell/feature/src"],
      "@towech-finance/authentication/tokens": ["libs/authentication/tokens/src"],
      "@towech-finance/desktop/shell/feature": ["libs/desktop/shell/feature/src"],
      "@towech-finance/desktop/shell/ui/layout": ["libs/desktop/shell/ui/layout/src"],
      "@towech-finance/desktop/toasts/data-access": ["libs/desktop/toasts/data-access/src"],
      "@towech-finance/desktop/toasts/error": ["libs/desktop/toasts/feature/error-handler/src"],
      "@towech-finance/desktop/toasts/tray": ["libs/desktop/toasts/feature/tray/src"],
      "@towech-finance/desktop/toasts/ui": ["libs/desktop/toasts/ui/src"],
      "@towech-finance/desktop/user/data-access": ["libs/desktop/user/data-access/src"],
      "@towech-finance/desktop/user/guards": ["libs/desktop/user/feature/guards/src"],
      "@towech-finance/shared/feature/i18n-nest": ["libs/shared/feature/i18n-nest/src"],
      "@towech-finance/shared/feature/logger": ["libs/shared/feature/logger/src"],
      "@towech-finance/shared/feature/mongo": ["libs/shared/feature/mongo/src"],
      "@towech-finance/shared/ui/button": ["libs/shared/ui/button/src"],
      "@towech-finance/shared/ui/checkbox": ["libs/shared/ui/checkbox/src"],
      "@towech-finance/shared/ui/input": ["libs/shared/ui/input/src"],
      "@towech-finance/shared/ui/themes": ["libs/shared/ui/themes/src"],
      "@towech-finance/shared/utils/models": ["libs/shared/utils/models/src"],
      "@towech-finance/shared/utils/pipes": ["libs/shared/utils/pipes/src"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
