{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@financeApp/backend-presentation": ["libs/backend/presentation/src/index.ts"],
      "@financeapp/backend-authorization": ["libs/backend/authorization/src/index.ts"],
      "@financeapp/backend-mailing": ["libs/backend/mailing/src/index.ts"],
      "@financeapp/backend-users": ["libs/backend/users/src/index.ts"],
      "@financeapp/frontend-authentication": ["libs/frontend/authentication/src/index.ts"],
      "@financeapp/frontend-common": ["libs/frontend/common/src/index.ts"],
      "@financeapp/frontend-navbar": ["libs/frontend/navbar/src/index.ts"],
      "@financeapp/frontend-toasts": ["libs/frontend/toasts/src/index.ts"],
      "@financeapp/frontend-users": ["libs/frontend/users/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
