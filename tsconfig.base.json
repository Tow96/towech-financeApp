{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@towech-finance/authentication/dto": ["libs/authentication/dto/src/index.ts"],
      "@towech-finance/authentication/http/signage": [
        "libs/authentication/http/signage/src/index.ts"
      ],
      "@towech-finance/authentication/middleware": ["libs/authentication/middleware/src/index.ts"],
      "@towech-finance/authentication/mocks": ["libs/authentication/mocks/src/index.ts"],
      "@towech-finance/authentication/repos/user": ["libs/authentication/repos/user/src/index.ts"],
      "@towech-finance/authentication/shell/feature": [
        "libs/authentication/shell/feature/src/index.ts"
      ],
      "@towech-finance/desktop/dashboard/feature": ["libs/desktop/dashboard/feature/src/index.ts"],
      "@towech-finance/desktop/login/feature": ["libs/desktop/login/feature/src/index.ts"],
      "@towech-finance/desktop/shell/data-access/authentication": [
        "libs/desktop/shell/data-access/authentication/src/index.ts"
      ],
      "@towech-finance/desktop/shell/feature": ["libs/desktop/shell/feature/src/index.ts"],
      "@towech-finance/desktop/shell/ui/layout": ["libs/desktop/shell/ui/layout/src/index.ts"],
      "@towech-finance/desktop/toaster/feature": ["libs/desktop/toaster/feature/src/index.ts"],
      "@towech-finance/shared/features/logger": ["libs/shared/features/logger/src/index.ts"],
      "@towech-finance/shared/features/mongo": ["libs/shared/features/mongo/src/index.ts"],
      "@towech-finance/shared/ui/themes/themes": ["libs/shared/ui/themes/themes/src/index.ts"],
      "@towech-finance/shared/utils/models": ["libs/shared/utils/models/src/index.ts"],
      "@towech-finance/shared/utils/pipes": ["libs/shared/utils/pipes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
